---
const { id } = Astro.props as { id: string }
---

<div id={id} class="absolute right-4 md:hidden hover:cursor-pointer border-4 border-pink-200 p-2 shadow-lg rounded-lg">
    <div role="button" title="Menu de opciones" class="container">
        <input id="checker-button" title="menu-checker" type="checkbox" class="checker" />
        <div class="line edge"></div>
        <div class="line center"></div>
        <div class="line center"></div>
        <div class="line edge"></div>
    </div>
</div>


<style>
  .container {
    position: relative;
    width: 20px;
    aspect-ratio: 1 / 0.9;
    min-width: 20px;
    min-height: 18px;
  }

  .container .checker {
    position: absolute;
    top: -60%;
    left: -60%;
    width: 220%;
    height: 230%;
    opacity: 0;
    appearance: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    cursor: pointer;
    z-index: 1;
  }

  .container .line {
    position: absolute;
    width: 100%;
    height: 2px;
    background-color: white;
    transition: transform 0.25s ease-in-out;
  }

  .container .edge:nth-of-type(4) {
    bottom: 0;
  }

  .checker:checked ~ .edge {
    transform: scaleX(0);
  }

  .container .center {
    /* Pixel Perfect Top Aligment */
    top: calc(50% - 2px * 0.5);
    transform-origin: center;
  }

  .checker:checked ~ .center:nth-of-type(2) {
    transform: rotate(45deg);
  }

  .checker:checked ~ .center:nth-of-type(3) {
    transform: rotate(-45deg);
  }
</style>