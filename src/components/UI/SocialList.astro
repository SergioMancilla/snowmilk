---
import SocialItem from './SocialItem.astro'
import SocialSVG from '@components/svg/SocialSVG.astro'
import { socialNetworks } from '@utils/lists/socialNetworks'
 
interface Props {
    className?: string,
    classIcons?: string
}

const { className, classIcons } = Astro.props
---

<ul class={`${className}`}>
    {
        socialNetworks.map(socialNetwork => {
            return (
                <SocialItem url={ socialNetwork.url }>
                    <SocialSVG className={`${classIcons || ''}`} tag={socialNetwork.tag} />
                </SocialItem>
            )
        })
    }
</ul>