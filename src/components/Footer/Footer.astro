---
import FooterMenuItem from './FooterMenuItem.astro'
import SocialList from '@components/UI/SocialList.astro'
import { sitePaths } from '@utils/lists/sitePaths';

---
<footer class="flex flex-col justify-center items-center bg-purple-500 relative h-footer px-3 py-2">
    <section>
        <h2 class="font-[madimi] text-primary-200 text-xl">
            Snowmilk Teas
        </h2>
    </section>
    <main>
        <!-- Navigation menu -->
        <nav>
            <ul class="flex gap-5 text-primary-100">
                {
                    sitePaths.map(sitePath => {
                        return (
                            sitePath.appearsIn.includes('footer')?
                            <FooterMenuItem url={ sitePath.url }>{ sitePath.name }</FooterMenuItem>
                            :
                            null
                        )
                    })
                }
            </ul>
        </nav>
        <!-- Social networks -->
        <nav class="mt-3">
            <SocialList className='flex justify-center gap-2' classIcons="fill-primary-100 h-6 w-6">
        </nav>
    </main>
</footer>