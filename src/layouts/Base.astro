---
import { getLangFromUrl } from '@i18n/utils'

const lang = getLangFromUrl(Astro.url)

interface SeoTags {
	description: string,
	keywords: string,
	robots?: string
}

interface Props {
	title: string;
	seoTags: SeoTags
}

const { title, seoTags } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="shortcut icon" href="" />
		<meta name="generator" content={Astro.generator} />

		<link rel="stylesheet" href="../assets/css/main.css">

		<!-- SEO -->
		<meta name="description" content={seoTags.description}>
		<meta name="keywords" content={seoTags.keywords}>
		<meta name="author" content="Snowmilk Teas">
		<meta name="robots" content={seoTags.robots || "index, follow"}>

		<link rel="canonical" href="TODO parametrizar la url canÃ³nica">

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
